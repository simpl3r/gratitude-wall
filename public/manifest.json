{
  "name": "Gratitude Wall",
  "short_name": "Gratitude Wall",
  "description": "Share what you are grateful for every day on Base blockchain",
  "start_url": "/",
  "scope": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#3b82f6",
  "orientation": "portrait",
  "lang": "en",
  "categories": ["social", "lifestyle", "productivity"],
  "icons": [
    {
      "src": "/icon-192.png",
      "sizes": "192x192",
      "type": "image/svg+xml",
      "purpose": "any maskable"
    },
    {
      "src": "/icon-512.png",
      "sizes": "512x512",
      "type": "image/svg+xml",
      "purpose": "any maskable"
    },
    {
      "src": "/icon.svg",
      "sizes": "any",
      "type": "image/svg+xml",
      "purpose": "any maskable"
    }
  ],
  "screenshots": [],
  "prefer_related_applications": false,
  "minikit": {
    "version": "1.0.0",
    "capabilities": [
      "wallet",
      "identity",
      "transactions",
      "social"
    ],
    "intents": [
      {
        "action": "checkin",
        "name": "Daily Gratitude Check-in",
        "description": "Share what you're grateful for today"
      },
      {
        "action": "share",
        "name": "Share Gratitude",
        "description": "Share your gratitude with the community"
      }
    ],
    "permissions": [
      "wallet_connect",
      "transaction_sign",
      "user_identity"
    ]
  }
}